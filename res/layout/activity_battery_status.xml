<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <TextView
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:text="tap to reread the battery status"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@drawable/ic_battery_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_battery_50"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/queryLinearLayout"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/status_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="100% Charged"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="normal"
            android:typeface="normal" />

        <TextView
            android:id="@+id/footnote_text"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Charging via USB"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal"
            android:typeface="normal" />

    </LinearLayout>

</FrameLayout>